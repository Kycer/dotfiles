# i3wm模块
[module/i3]
type = internal/i3
# <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
# <label-mode> (default)
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true
pin-workspaces = true

label-mode = %mode%
label-mode-padding = 3
label-mode-foreground = ${colors.i3-fg}
label-mode-background = ${colors.i3-bg}

label-focused = %name%
label-focused-background = ${colors.i3-focused-bg}
label-focused-underline = ${colors.i3-focused-ul}
label-focused-padding = 3

label-unfocused = %index%:%name%
label-unfocused-padding = 3

label-urgent = %index%:%name%
label-urgent-background = ${colors.i3-urgent-bg}
label-urgent-padding = 3

label-visible = %name%
label-visible-background = ${colors.i3-focused-bg}
label-visible-underline = ${colors.i3-focused-ul}
label-visible-padding = 3

# 窗口标题
[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

# 时间显示
[module/date]
type = internal/date
interval = 1

format = <label>
format-prefix = " "
format-underline = ${colors.date-ul}
format-foreground = ${colors.date-fg}

date = "%Y-%m-%d "
date-alt = "%Y-%m-%d"
time = "%H:%M"
time-alt = "%H:%M:%S %A"

label = %date% %time%
label-font = 2

# 键盘
[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
format-prefix = " "
format-prefix-foreground = ${colors.key-fg}
format-prefix-underline = ${colors.key-ul}
label-layout = %layout%
label-layout-underline = ${colors.key-ul}
label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.key-ul}
label-indicator-underline = ${colors.key-ul}

# 文件系统
